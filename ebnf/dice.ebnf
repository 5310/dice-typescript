dice_roll = 
    roll, [ roll_modifiers ]
;

roll = 
    basic_roll | fate_roll
;

basic_roll = 
    (integer | bracketed_expression), "d", integer
;

fate_roll = 
    (integer | bracketed_expression), "d", "F"
;

roll_modifiers = 
    roll_modifier, { ",", roll_modifier }
;

roll_modifier = 
    success_modifier |
    explode_modifier |
    compound_modifier |
    penetrate_modifier |
    keep_modifier |
    drop_modifier |
    reroll_modifier |
    reroll_once_modifier |
    sort_modifier
; ? (* TODO: Implement. *)